extends layout 

block content 
    form(id='form' method='post' action='/create')
        p Username
            input(type='text' name='username')
        p Password 
            input(type='password' name='password')
        p Email 
            input(type='text' name='email')
        p Age 
            input(type='age' name='age')
        p Do you like blue?
            select(type='text' name='answerOne')
                option(value='All of Yes') All of Yes
                option(value='I cannot see blue') I cannot see blue
                option(value=`It's pretty cool`) It's pretty cool
                option(value=`I'm wrong`) I'm wrong
        p Do you like chicken?
            select(type='text' name='answerTwo')
                option(value='One') Yes
                option(value='Two') No
                option(value='Three') Im Vegan, Ew
                option(value='Four') Whats chicken?
        p What do you think about clowns?
            select(type='text' name='answerThree')
                option(value='One') They are pretty cool
                option(value='Two') They are meh
                option(value='Three') They are spawns of Satan
                option(value='Three') You mean like Ronald McDonald?
        input(type='submit' value='Add user')